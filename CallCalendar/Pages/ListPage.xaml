<Page x:Class="CallCalendar.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CallCalendar"
      mc:Ignorable="d" 
      d:DesignWidth="800" d:DesignHeight="450"
      Width="Auto" Height="Auto" Margin="0"
      Title="ListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Width="113" HorizontalAlignment="Left" Background="Bisque" FontFamily="Comic Sans MS" FontSize="24" Click="Back_Click">Назад</Button>
        <Label x:Name="DateLabel" Margin="60,5,5,5" Content="13 April 2023" FontSize="24" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>

        <ListBox x:Name="listBox" Background="Beige" Grid.Row="1" Margin="0,0,0,60">
        </ListBox>

        <Button Grid.Row="1" Height="60" VerticalAlignment="Top"  Background="Bisque" FontFamily="Comic Sans MS" FontSize="24" Click="Save_Click" Margin="280,290,280,0">засейвить</Button>
    </Grid>
</Page>
